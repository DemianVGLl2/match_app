<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <!-- Título -->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutoriales / Manual de uso"
        android:textSize="18sp"
        android:textColor="#A36B5F"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Línea separadora -->
    <View
        android:id="@+id/separador"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="#A36B5F"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Contenedor de video -->
    <FrameLayout
        android:id="@+id/videoContainer"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/separador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.85" />

    <!-- Botón UP4U -->
    <Button
        android:id="@+id/btnUp4U"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="UP4U"
        android:textColor="#FFFFFF"
        android:backgroundTint="#8B1E3F"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/videoContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.65" />

    <!-- Botón What's UP -->
    <Button
        android:id="@+id/btnWhatsUp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="What’s UP"
        android:textColor="#FFFFFF"
        android:backgroundTint="#8B1E3F"
        android:elevation="4dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnUp4U"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.65" />

    <!-- Imagen de perfil redonda -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/perfilImagen"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_user"
        android:layout_marginBottom="90dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <!-- Barra de navegación inferior -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#C39C6F"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Chat -->
        <ImageButton
            android:id="@+id/nav_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_chat"
            android:contentDescription="Chat"
            android:tint="#FFFFFF"
            android:scaleType="centerInside"
            android:maxHeight="32dp"
            android:maxWidth="32dp" />

        <!-- Inicio -->
        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_home"
            android:contentDescription="Inicio"
            android:tint="#8B1E3F"
            android:scaleType="centerInside"
            android:maxHeight="32dp"
            android:maxWidth="32dp" />

        <!-- Perfil (activo) -->
        <ImageButton
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_user"
            android:contentDescription="Perfil"
            android:tint="#FFFFFF"
            android:scaleType="centerInside"
            android:maxHeight="32dp"
            android:maxWidth="32dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>